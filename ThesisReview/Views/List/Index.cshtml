@model  ListViewModel


<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Student</th>
			<th>Tytuł recenzji</th>
			<th class="text-right">Typ</th>
			<th class="text-right">Status</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var line in Model.Forms)
		{
		<tr>
			<td class="text-center">@line.StudentMail - Index</td>
			<td class="text-right">@line.Title</td>
			<td class="text-right">@line.ReviewType</td>
			<td class="text-right">@line.Status</td>
			<td class="text-center"><a class="glyphicon glyphicon-edit text-danger remove"  asp-controller="Form" asp-action="Details" asp-route-id="@line.FormURL"></a></td>
			<td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="Form" asp-action="Details" asp-route-id="@line.FormURL" onclick="return confirm('Czy na pewno chcesz usunąć tę recenzję?\n @line.Title')"></a></td>
		</tr>
		}
	</tbody>
