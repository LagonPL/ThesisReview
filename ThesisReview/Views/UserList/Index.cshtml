@model UserListViewModel
@{
	ViewData["Title"] = "Lista";
}
<form asp-action="Index" method="get">
	<div class="form-actions col-md-4">
		<p>
			<input type="text" class="form-control" name="SearchString" placeholder="Znajdź po wartości w tablicy" value="@ViewData["currentFilter"]"/>
			<input type="submit" value="Szukaj" class="btn btn-default" /> |
			<a asp-action="Index">Wróc</a>
		</p>
	</div>
</form>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Stopień naukowy</th>
			<th>Nazwisko i imię</th>
			<th>Wydział</th>
			<th>Mail</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var line in Model.UsersList)
		{
		<tr>
			<td class="text-left">@line.Title</td>
			<td class="text-left">@line.Fullname</td>
			<td class="text-left">@line.Department</td>
			<td class="text-left">@line.Mail</td>
		</tr>
		}
	</tbody>
</table>