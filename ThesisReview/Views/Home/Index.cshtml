@{
	ViewData["Title"] = "Strona Główna";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
	<img src="~/images/logo.png" alt="Politechnika" class="img-responsive center-block" />
</div>



<div class="row col-md-6 col-md-offset-3">
	@if (ViewData["Succes"] != null)
	{
	<div class="alert alert-success" role="alert">
		@Html.Raw(ViewData["Succes"])
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
}
	<h1 class="text-center">Wybierz czynność:</h1>
	@if (SignInManager.IsSignedIn(User))
	{
		@Html.ActionLink("Recenzje", "Index", "List", null, new { @class = "btn btn-danger center-block" })
	}
	else
	{
		@Html.ActionLink("Zaloguj się", "Login", "Account", null, new { @class = "btn btn-danger center-block" })
	}
	<hr />
	@Html.ActionLink("Wyślij pracę", "Create", "Form", null, new { @class = "btn btn-danger center-block" })

</div>
